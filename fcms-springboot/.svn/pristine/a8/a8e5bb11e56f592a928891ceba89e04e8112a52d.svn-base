<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 根据计划id查用户 -->
<mapper namespace="com.yhlt.showcase.survey.dao.SurveyRecordTotalMBDAO">
	<sql id="findByParams_where">
			<if test="paperId!=null and paperId!=''"> 
			<![CDATA[paper_id = #{paperId} and ]]>
			</if>
	</sql>
	<sql id="pagination">
	    <if test="endRow!=null and endRow!='' ">
	  		<![CDATA[ limit #{startRow},#{endRow} ]]>
	  	</if>
	</sql>
	
	<select id="findPaperPager" parameterType="map" resultType="SurveyPaperStatusDto">
	
		SELECT
			p.id id,
			p.uuid uuid,
			p.title title,
			p.remark remark,
			p.start_date startDate,
			p.end_date endDate,
			p.`status` `status`,
			p.threshold threshold,
			p.total total,
			(
				SELECT
					`status`
				FROM
					tm_fcms_survey_paper_user
				WHERE
					user_id = #{userId}
				AND p.id = paper_id
			) `finishStatus`
		FROM
			tm_fcms_survey_paper p
		WHERE
			p.`status` = 1
		<include refid="pagination" /> 
	</select>
	<!-- 查询用户,演示: 1.输入用map传入多个参数 2.<where>语句, 智能添加where和and关键字 3.输出直接映射对象 分页条件查询方法 -->
